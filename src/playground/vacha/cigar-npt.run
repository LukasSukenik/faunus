#!/bin/bash

#-----------------------------------------------------------
# Create file with atom properties
#-----------------------------------------------------------
echo "
Atom  CI      +0     2.0    0.1    1       no
" > cigar-npt.atoms

#-----------------------------------------------------------
# Create user input file
#-----------------------------------------------------------
echo "
atomlist               cigar-npt.atoms
loop_macrosteps        10
loop_microsteps        10000
cuboid_len             200     # Box side length Angstrom
temperature            298     # Kelvin
npt_P                  5000013.2   # mM
npt_dV                 2       # log(dV)
tion1                  CI
nion1                  100
dpion1                 10
rot_particle_genericdp  1.1 
" > cigar-npt.input

#-----------------------------------------------------------
# Run simulation
#-----------------------------------------------------------
#rm state
./cigar-npt

